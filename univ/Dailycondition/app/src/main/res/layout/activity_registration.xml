<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.seunghyeonpark.dailycondition.RegistrationActivity"
    android:orientation="vertical"
    android:weightSum="1"
    android:background ="@drawable/registration_drawable">


    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint = "이름 입력해주세요."
        android:textSize = "14dp"
        android:ems="10"
        android:id="@+id/editName"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="111dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint = "나이를 입력해주세요."
        android:textSize = "14dp"
        android:ems="10"
        android:id="@+id/editAge"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="156dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="키를 입력해주세요"
        android:ems="10"
        android:id="@+id/editHeight"
        android:textSize = "14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="200dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="몸무게를 입력해주세요"
        android:ems="10"
        android:id="@+id/editWeight"
        android:textSize = "14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="244dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:id="@+id/btnFinishResister"
        android:background="#00ff0000"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id = "@+id/SmokeGroup"
        android:checkedButton="@+id/selectionSmoke"
        >

        <RadioButton
            android:text="흡연"
            android:textSize = "13dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="337dp"
            android:id="@+id/rbSmoke"
            />


        <RadioButton
            android:text="비흡연"
            android:textSize = "13dp"
            android:layout_width="70dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="337dp"
            android:id="@+id/rbNonSmoke"/>
        />
    </RadioGroup>


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id = "@+id/DrinkGroup"
        android:checkedButton="@+id/selectionDrink"
        >

        <RadioButton
            android:text="음주O"
            android:textSize = "13dp"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="293dp"
            android:id="@+id/rbDrink"
            />


        <RadioButton
            android:text="음주X"
            android:textSize = "13dp"
            android:layout_width="70dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="293dp"
            android:id="@+id/rbNonDrink"/>
        />
    </RadioGroup>


</RelativeLayout>
