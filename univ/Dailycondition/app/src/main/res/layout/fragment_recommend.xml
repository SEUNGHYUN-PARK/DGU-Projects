        android:layout_height="250dp" />


    <ImageView
        android:id="@+id/manswer"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>